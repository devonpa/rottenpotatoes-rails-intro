<html>
  	<head>
    	<title>Home Page</title>
    	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    	<style>
    		.img-controller{
    			width = 750px;
    			height = 500px;
    			margin: auto;
    		}
    		section {
			  text-align: center;
			}
			div.left-half, div.right-half {
			  height: 100%;
			}
			article {
			  position: absolute;
			  top: 10%;
			  left: 50%;
			  transform: translate(-50%, -50%);
			  width: 100%;
			  padding: 20px;
			}
			/* Pattern styles */
			.container {
			  display: table;
			  width: 100%;
			}
			.left-half {
			  position: absolute;
			  left: 0px;
			  width: 50%;
			}
			.right-half {
			  position: absolute;
			  right: 0px;
			  width: 50%;
			}
    		div.left-half input[type=text] {
			    font-size: 17px;
			    border: 1px solid grey;
			    width: 250px;
			    height: 40px;
			    background: #f1f1f1;
			}
    		div.left-half button {
			    width: 100px;
			    height: 40px;
			    padding: 10px;
			    background: #2196F3;
			    color: white;
			    font-size: 17px;
			    border: 1px solid grey;
			    border-left: none;
			    cursor: pointer;
			}
			.calendar-div {
				position: center;
				padding-top: 300px;
			}
    	</style>
  	</head>
  	<body>
		<div id="myCarousel" class="carousel slide" data-ride="carousel">
		  	<!-- Indicators -->
		  	<ol class="carousel-indicators">
		    	<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		    	<li data-target="#myCarousel" data-slide-to="1"></li>
		    	<li data-target="#myCarousel" data-slide-to="2"></li>
				</ol>

				<!-- Wrapper for slides -->
				<div class="carousel-inner">
				<div class="item active">
		  			<%= image_tag("FoodImages/japanese-noodles-tonkotsu-ramen.jpg", alt: "Tonkotsu Ramen", class: "img-controller") %>
				</div>

				<div class="item">
		  			<%= image_tag("FoodImages/Feature-Cuban-Sandwich-Recipe.jpg", alt: "Cuban Sandwich", class: "img-controller") %>
				</div>

				<div class="item">
		  			<%= image_tag("FoodImages/Burito_Test.jpg", alt: "Burito", class: "img-controller") %>
				</div>
				</div>

		  	<!-- Left and right controls -->
		  	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
		    	<span class="glyphicon glyphicon-chevron-left"></span>
		    	<span class="sr-only">Previous</span>
		  	</a>
		  	<a class="right carousel-control" href="#myCarousel" data-slide="next">
		    	<span class="glyphicon glyphicon-chevron-right"></span>
		    	<span class="sr-only">Next</span>
		  	</a>
		</div>

		<section class="container">
  			<div id="quicklookup" class="left-half">
    			<article>
      				<h3>Look up a Recipe</h3>
					<input type="text" placeholder="Search.." class="search-bar" name="search">
					<button type="submit"><i class="fa fa-search"></i></button>
    			</article>
  			</div>
  			<div id="FeaturedRecipes" class="right-half">
    			<article>
      				<h3>Featured Recipes</h3>
    			</article>
  			</div>
		</section>

		<div id="weeklycalendar" class="calendar-div">	
			<%= month_calendar do |date| %>
				<h3>Recipes here...</h3>
				<!--<%= @recipes.each do |recipe_n| %>
					<%= recipe_n.recipe_name %>
				<% end %> -->
			<% end %>
		</div>
   	</body>
 </html>